<div class="page-title">
  
    <h3 style="text-align: center">Staff</h3>
  

<div class="col-md-6 col-sm-6 col-xs-12" style="width:100%">
  <div class="x_panel">
    <div class="x_title">
    
      <button type="button" class="btn btn-primary btn-circle btn-lg" onclick="location.href = '<%= new_staff_path%>';"><i class="glyphicon glyphicon-plus"></i></button>
      
    
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>#Edit</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_staff_path(user), :class => 'btn btn-info btn-xs' %>&nbsp;<% if user.status == 'ACTIVE' %><%= link_to '<i class="fa fa-trash-o"></i> Disable'.html_safe, user, :class => 'btn btn-danger btn-xs',  method: :delete, data: { confirm: 'Are you sure?' } %><% else %><%= link_to 'Activate', user_activate_path(user), method: :patch, :class => 'btn btn-success btn-xs' %>&nbsp;&nbsp;&nbsp;<% end %>&nbsp;<%= link_to '<i class="fa fa-pencil"></i> Change password'.html_safe, password_path(user), :class => 'btn btn-info btn-xs' %>&nbsp;</td>
         </tr>
        <% end %>
        </tbody>
      </table>

      <%= paginate @users, :left => 1, :right => 3 %>

    </div>
  </div>
</div>
