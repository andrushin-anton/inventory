<!DOCTYPE html>
<html>
  <head>
    <title>Northern Windows & Doors</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="nav-md">

    <div class="container body">
      <div class="main_container">
        
         
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="<%= root_path %>" class="site_title"> <span>Inventory</span></a>
            </div>

            <div class="clearfix"></div>

          

            <br>

            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
              <div class="menu_section active">
                
                    <ul class="nav child_menu" style="display: block;">
                  
                      <li class="<%= 'current-page' if params[:controller] == 'inventory' %>"><a href="<%= root_path%>">Inventory</a></li>
                      <li class="<%= 'current-page' if params[:controller] == 'orders' %>"><a href="<%= root_path%>">Orders</a></li>
                      <li class="<%= 'current-page' if params[:controller] == 'staff' %>"><a href="<%= root_path%>">Staff</a></li>
                    
                    </ul>
                  
              </div>
            </div>
            <!-- /sidebar menu -->

            
          </div>
        </div>
        

        <!-- top navigation -->
        <div class="top_nav">
          <div class="nav_menu">
            <nav>
            <% flash.each do |name, msg| %>
            <div class="flash_message">Message: <%= msg%></div>
            <% end %>
              <!--<div class="nav toggle">-->
                <!--<a id="menu_toggle"><i class="fa fa-bars"></i></a>-->
              <!--</div>-->

              <ul class="nav navbar-nav navbar-right">
                <li class="">
                  <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <%= current_user.first_name %> <%= current_user.last_name %>
                    <span class=" fa fa-angle-down"></span>
                  </a>
                  <ul class="dropdown-menu dropdown-usermenu pull-right">
                    <li class="<%= 'current-page' if params[:controller] == 'inventory' %>"><a href="<%= root_path%>">Inventory</a></li>
                    <li><a href="<%= password_path(current_user) %>"> Change password</a></li>
                    <li><a href="<%= logout_path %>"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                  </ul>
                </li>
              </ul>
            </nav>
          </div>
        </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main" style="min-height:100vh;">
          <div class="x_panel">
            <%= yield %>
          </div>
        </div>
        <!-- /page content -->

      </div>
    </div>

  </body>
</html>
