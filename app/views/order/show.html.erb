
<div class="x_panel">
  <div class="x_title">
    <h2><%= @order.pid%></h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <div class='form-horizontal form-label-left input_mask'>

      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Purchase order number</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"><%= @order.pid %></label>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Customer</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"><%= @order.customer %></label>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Status</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"><%= @order.status %></label>
        </div>
      </div>

    </div>
  </div>
</div>


<div class="x_panel">
  <div class="x_title">
    <h2>Order Details</h2>
    
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
            </tr>
            </thead>
            <tbody>
            <% @order_items.each do |item| %>
            <tr>
                <td><%= truncate(item.item_name, :length => 20, :omission => '...') %></td>
                <td><%= item.quantity %></td>
            </tr>
            <% end %>
            </tbody>
        </table>
  </div>
</div>

